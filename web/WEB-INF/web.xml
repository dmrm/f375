<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>p/person.xhtml</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DB for Oatmeal Application</description>
        <res-ref-name>jdbc/OatmealAppData</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>oatmealRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerr.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secured content</web-resource-name>
            <url-pattern>/p/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>REGISTRAR</role-name>
            <role-name>DETECTIVE</role-name>
            <role-name>PRIVATE_EYE</role-name>
            <role-name>POLICEMAN</role-name>
            <role-name>OUSER</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>OUSER</role-name>
    </security-role>
     <security-role>       
         <role-name>REGISTRAR</role-name>
    </security-role>
     <security-role>
        <role-name>POLICEMAN</role-name>
    </security-role>
     <security-role>
        <role-name>DETECTIVE</role-name>
    </security-role>
     <security-role>
        <role-name>PRIVATE_EYE</role-name>
    </security-role>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/login.xhtml</location>
    </error-page>
</web-app>
